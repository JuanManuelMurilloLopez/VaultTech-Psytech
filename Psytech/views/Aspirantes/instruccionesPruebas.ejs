<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Instrucciones Kostick</title>
      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- CSS link -->
      <link rel="stylesheet" href="/css/aspirantes/instruccionesOtis.css">
</head>
<body class="has-background-danger-95">
  <section class="section fullHeight">
    <div class="container is-max-tablet">
      <% if (prueba) { %>
      <h1 class="title is-1 has-text-weight-semibold">
        <%=prueba.nombre%>
      </h1>
      <br />
      <div class="is-centered ml-5">
        <h2 class="title is-3 has-text-weight-semibold">Instrucciones</h2>
        <br />
        <p class="subtitle is-5 justified"><%=prueba.instrucciones%></p>
        <br />
        <br />

        <!-- Nuestros botones -->
        <div class="d-flex justify-content-between mt-5">
          <a href="/aspirante/mis-pruebas" class="btn btn-secondary">Regresar</a>
              <button id="botonIniciar" type="button" class="btn btn-color--secondary">Iniciar Prueba</button>
        </div>
      </div>
      <%};%>
    </div>
  </section>

  <script>
      document.getElementById('botonIniciar').addEventListener('click', function () {
    <% if (prueba.nombre === 'KOSTICK') { %>
      window.location.href = "/aspirante/datos-personales-KOSTICK";
    <% } else { %>
      window.location.href = "/aspirante/datos-personales-16PF";
    <% } %>
  });
  </script>

</body>
</html>



