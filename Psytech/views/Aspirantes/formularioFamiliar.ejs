<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información familiar</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/aspirantes/formularioFamiliar.css">
</head>
<body>
    <div class="main-container">
        <h1 class="text-center">Información familiar</h1>
        <hr>

        <form action="/aspirante/formulario-familiar" method="POST">

            <div class="mb-3">
                <label class="form-label" for="rolFamiliar">
                    Rol de familiar
                </label>
                <input type="text" class="form-control" name="rolFamiliar" required>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="nombreFamiliar">
                    Nombre completo del familiar
                </label>
                <input type="text" class="form-control" name="nombreFamiliar" required>
            </div>
        
            <div class="mb-3 col-md-3">
                <label class="form-label" for="edadFamiliar">
                    Edad
                </label>
                <input type="number" class="form-control" name="edadFamiliar" required>
            </div>
            <div class="mb-3 col-md-3">
                <label class="form-label" for="idGenero">
                    Genero
                </label> <br>
                <select class="form-select" name="idGenero">
                    <% for(genero of generos){ %>
                        <option value="<%= genero.idGenero %>"> 
                            <%= genero.nombreGenero %> 
                        </option>
                    <% } %>
                </select>
            </div>
        
            <div class="mb-3 col-md-3">
                <label class="form-label" for="idEstadoCivil">
                    Estado civil
                </label> <br>
                <select class="form-select" name="idEstadoCivil">
                    <% for(estadoCivil of estadosCiviles){ %>
                        <option value="<%= estadoCivil.idEstadoCivil %>"> 
                            <%= estadoCivil.nombreEstadoCivil %> 
                        </option>
                    <% } %>
                </select>
            </div>

            <div class="mb-3 col-md-3">
                <label for="hijoDe">Hijo de</label> <br>
                <select class="form-select" name="hijoDe">
                    <option value="">familiares registrados</option>
                    <% if (hijoDe.length > 0) { %>
                        <% for(hijo of hijoDe) { %>
                            <option value="<%= hijo.idFamiliar %>"> 
                                <%= hijo.nombreFamiliar %> 
                            </option>
                        <% } %>
                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Estado de vida
                </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" 
                            name="estadoDeVida" 
                            value="1"
                            id="vivo" required>
                    <label class="form-check-label" for="vivo">
                        Vivo
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" 
                            name="estadoDeVida"
                            value="2"
                            id="fallecido" readonly>
                    <label class="form-check-label" for="fallecido">
                        Fallecido
                    </label>
                </div>
            </div> 
            <div class="botones mt-5 mb-3">
                <button type="submit" class="btn btn-color--third">Enviar</button>
            </div>

            <div class="fixed-bottom-buttons">
                <button id="botonTerminar" type="button" class="btn btn-color--secondary">
                    Terminar
                </button>
            </div>

        </form>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const formularioFamiliares = document.getElementById("formularioFamiliares");
            const botonTerminar = document.getElementById("botonTerminar");

            botonTerminar.addEventListener("click", () => {
                window.location.href = '/aspirante/respuestas-enviadas';
            });
        });
    </script>
</body>
</html>