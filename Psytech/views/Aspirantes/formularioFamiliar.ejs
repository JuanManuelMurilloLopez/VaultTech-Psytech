<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información familiar</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Información familiar</h1>
        <hr>

        <form action="/aspirante/formulario-familiar" method="POST">

            <div class="mb-3">
                <label class="form-label" for="rolFamiliar">
                    Rol de familiar
                </label>
                <input type="text" class="form-control" name="rolFamiliar">
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="nombreFamiliar">
                    Nombre completo del familiar
                </label>
                <input type="text" class="form-control" name="nombreFamiliar">
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="edadFamiliar">
                    Edad
                </label>
                <input type="text" class="form-control" name="edadFamiliar">
            </div>
            <div class="mb-3">
                <label for="idGenero">Genero</label> <br>
                <select name="idGenero" id="idGenero">
                    <% for(genero of generos){ %>
                        <option value="<%= genero.idGenero %>"> 
                            <%= genero.nombreGenero %> 
                        </option>
                    <% } %>
                </select>
            </div>
        
            <div class="mb-3">
                <label for="idEstadoCivil">Estado civil</label> <br>
                <select name="idEstadoCivil" id="idEstadoCivil">
                    <% for(estadoCivil of estadosCiviles){ %>
                        <option value="<%= estadoCivil.idEstadoCivil %>"> 
                            <%= estadoCivil.nombreEstadoCivil %> 
                        </option>
                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label for="hijoDe">Hijo de</label> <br>
                <select name="hijoDe" id="hijoDe">
                    <option value="">familiares registrados</option>
                    <% if (hijoDe.length > 0) { %>
                        <% for(hijo of hijoDe) { %>
                            <option value="<%= hijo.idFamiliar %>"> 
                                <%= hijo.nombreFamiliar %> 
                            </option>
                        <% } %>
                    <% } %>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Estado de vida
                </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" 
                            name="estadoDeVida" 
                            value="1"
                            id="vivo">
                    <label class="form-check-label" for="vivo">
                        Vivo
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" 
                            name="estadoDeVida"
                            value="2"
                            id="fallecido">
                    <label class="form-check-label" for="fallecido">
                        Fallecido
                    </label>
                </div>
            </div> 
            <!-- Botones para regresar y enviar formulario -->
            <div class="fixed-bottom-buttons">
                <div class="container">
                    <div class="row gx-3 mt-4 mb-3">
                        <div class="col-md-6 text-end">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Botón "Terminar" que aparece después de enviar todos los formularios -->
        <div id="botonTerminar">
            <button type="button" class="btn btn-success">Terminar</button>
        </div>

    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const formularioFamiliares = document.getElementById("formularioFamiliares");
            const botonTerminar = document.getElementById("botonTerminar");

            botonTerminar.addEventListener("click", () => {
                window.location.href = '/aspirante/respuestas-enviadas';
            });
        });
    </script>
</body>
</html>