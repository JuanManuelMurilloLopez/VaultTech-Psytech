<%- include('../includes/_navsidePsicologo.ejs') %>
<%- include('../includes/_buttonCerrarSesion.ejs') %>
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina Principal Psicologos</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/aspirantesGrupo.css">
</head>

<body class="bg-light">
    <div class="container">
        <h1 class="text-center mt-5">PSICODX</h1>
        <div class="row g-4 mt-4">
            <% for(grupo of arregloGrupos) { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header">
                                <p><%= grupo.nombreGrupo %></p>
                                <span><%= grupo.estatusGrupo %></span>
                            </div>
                            <p>Carrera: <%= grupo.carrera %></p>
                            <p>Año de Generación: <%= grupo.anioGeneracion %></p>
                            <p>Semestre: <%= grupo.cicloEscolar %></p>
                            <p>Número de aspirantes: <%= grupo.numeroAspirantes %></p>
                            <div>
                                <a href="/psicologo/aspirantes">Ver grupo</a>
                                <a href="/psicologo/editar-grupo">Editar</a>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
            <% } %>
        </div>
        

    </div>


    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>