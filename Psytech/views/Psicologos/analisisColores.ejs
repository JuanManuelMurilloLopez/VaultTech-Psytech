<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analisis Colores</title>

    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet">


    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/analisisOtis.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">

</head>
<body class="">
    <div class="main">
        <%- include('../includes/_navsidePsicologo.ejs') %>
        <div class="container">
            <%- include('../includes/_buttonCerrarSesion.ejs') %>
            <h1 class="text-center">Analisis Prueba Colores</h1> <br>
            <div class="row">
                <h3 class="fw-bolder">Análisis por Color</h3>
            </div>
            
            <div class="row g-4">
                <div class="row g-4">
                    <div class="col-md-12">
                        <canvas id="graficaColores" class="col-md-4"></canvas>
                        <div class="tabla-colores">
                            <table class="table table-bordered col-md-4">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Significado</th>
                                        <th>Porcentaje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let color of resultado) { %>
                                            <tr>
                                                <td><%= color.significado %></td>
                                                <td><%= color.porcentaje %>%</td>
                                            </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        const coloresData = <%- JSON.stringify(resultado) %>;

        const significados = [...new Set(coloresData.map(c => c.significado))];

        const personalidadData = significados.map(significado => {
            const item = coloresData.find(c => c.significado === significado && c.tipo === 'Laboral');
            return item ? item.porcentaje : 0;
        });

        const adaptacionData = significados.map(significado => {
            const item = coloresData.find(c => c.significado === significado && c.tipo === 'No laboral');
            return item ? item.porcentaje : 0;
        });

    
        const ctxColores = document.getElementById('graficaColores');
    
        const mixedChart = new Chart(ctxColores, {
            type: 'bar',
            data: {
                labels: significados,
                datasets: [
                    {
                        type: 'bar', 
                        label: 'Personalidad',
                        data: personalidadData,
                        backgroundColor: 'rgba(0, 102, 204, 0.7)',
                        borderColor: 'rgba(0, 102, 204, 1)',
                        borderWidth: 1
                    },
                    {
                        type: 'bar',
                        label: 'Adaptación al medio',
                        data: adaptacionData,
                        backgroundColor: 'rgba(100, 149, 237, 0.7)',
                        borderColor: 'rgba(100, 149, 237, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {

                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                }
            }
        });
    </script>    

</body>