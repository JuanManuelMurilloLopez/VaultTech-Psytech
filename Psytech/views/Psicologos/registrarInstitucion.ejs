<%- include('../includes/_navsidePsicologo.ejs') %>
<%- include('../includes/_buttonCerrarSesion.ejs') %>
<!DOCTYPE html>
<html lang="es">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar instituciones</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/registrarInstitucion.css">
</head>


<body class="bg-light">
    <div class="container">

        <h1 class="text-center">REGISTRAR NUEVA INSTITUCIÓN</h1>
       <form action="/psicologo/registrar-institucion" method="POST">
            <!-- Campo Nombre -->
            <div class="form-floating mb-3">
                <input type="" class="form-control" id="" placeholder="">
                <label for="">Nombre</label>
            </div>
        
            <!-- Campo Tipo Institución -->
            <select class="form-select" aria-label="Default select example">
                <% for(tipoInstitucion of tiposInstitucion) { %>
                    <option value="<%= tipoInstitucion.idTipoInstitucion %>"><%= tipoInstitucion.nombreTipoInstitucion %></option>
                <% } %>
            </select>
        
            <br>

                <!-- Botones de navegación "Regresar y Guardar" -->
            <button type="button" class="btn btn-color--third"
            onclick="window.location.href=
            '/psicologo/catalogo-instituciones'"
            >Regresar</button>

            <button type="submit" class="btn btn-color--secondary"
            onclick="confirm('¿Está seguro de guardar los cambios?'),
            window.location.href= '/psicologo/catalogo-instituciones'"
            >Guardar</button>
       </form>

        
    </div>

    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>
