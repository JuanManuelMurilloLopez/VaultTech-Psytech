<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grupos por Institucion</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/gruposInstituciones.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>


<body class="bg-light">

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h3><%= informacionInstitucion.nombreInstitucion %></h3>
            <h4>Estatus:</h4>
            <span class="badge text-bg-info"><% if(informacionInstitucion.estatusInstitucion == 1){ %>
                                                <%= "Activa" %> 
                                            <%} else { %> 
                                                <%= "Inactiva" %>
                                            <% } %></span>
            <br>
            <h4>Tipo de Institución: <%= informacionInstitucion.nombreTipoInstitucion %></h4>
            <br>
            <h1 class="text-center">GRUPOS REGISTRADOS</h1>
        
            <!-- Campo Buscar -->
            <div class="form-floating mb-3">
                <input type="" class="form-control" id="" placeholder="">
                <label for="">Buscar</label>
            </div>
    
    
            <!-- Boton de navegación "Registrar nuevao grupo" -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-color--secondary"
                onclick="window.location.href=
                '/psicologo/registrar-grupo'">Registrar Nuevo</button>
            </div>
    
    
            <div class="row g-4 mt-4">
    
                <% for(grupo of arregloGrupos) { %>
    
                    <div class="col-md-4">
    
                        <div class="card">
    
                            <div class="card-body">
    
                                <div class="card-title">
    
                                    <p><%= grupo.nombreGrupo %></p>
    
                                    <span class="badge rounded-pill text-bg-info"><% if(grupo.estatusGrupo == 1){ %>
                                        <%= "Activo" %> 
                                    <%} else { %> 
                                        <%= "Inactivo" %>
                                    <% } %></span>
    
                                </div>
    
                                <p class="card-text">Carrera: <%= grupo.carrera %></p>
    
                                <p class="card-text">Año de Generación: <%= grupo.anioGeneracion %></p>
    
                                <p class="card-text">Semestre: <%= grupo.cicloEscolar %></p>
    
                                <p class="card-text">Número de aspirantes: <%= grupo.numeroAspirantes %></p>
    
                                <div>
    
                                    <a href="/psicologo/informacion-grupos/<%= grupo.idGrupo %> " class="btn btn-color--secondary w-100">Ver grupo</a>
    
                                    <a href="/psicologo/editar-grupo" class="btn btn-color--third w-100">Editar</a>
    
                                </div>
    
                            </div>    
    
                        </div>
    
                    </div>
    
                <% } %>
    
            </div>
    
            <br>
            <!-- Botones de navegación Grupo, Edicion, Regresar" -->
            <button type="button" class="btn btn-color--third"
            onclick="window.location.href=
            '/psicologo/catalogo-instituciones'">Regresar</button>
            <br>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>
</body>
