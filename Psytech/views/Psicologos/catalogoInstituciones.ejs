<%- include('../includes/_buttonCerrarSesion.ejs') %>
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catalogo instituciones</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/aspirantesGrupo.css">
</head>

<body class="bg-light">
    <div class="container">
        <h1 class="text-center">INSTITUCIONES</h1>
        
        <!-- Campo Buscar -->
        <div class="form-floating mb-3">
            <input type="" class="form-control" id="" placeholder="">
            <label for="">Buscar</label>
        </div>
        <!-- Boton de navegación "Registrar nueva institucion" -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="button" class="btn btn-color--secondary"
            onclick="window.location.href=
            '/psicologo/registrar-institucion'">Registrar Nueva</button>
        </div>

        <div class="row g-4">
            <% for(institucion of arregloInstituciones) { %>
                <!-- Tarjetas Institución-->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= institucion.nombreInstitucion %></h5>
                            <span class="badge rounded-pill text-bg-info"><% if(institucion.estatusInstitucion == 1){ %>
                                                                                    <%= "Activo" %> 
                                                                            <%} else { %> 
                                                                                <%= "Inactivo" %>
                                                                            <% } %></span>
                            <p class="card-text">Tipo de Institución: <%= institucion.nombreTipoInstitucion %></p>
                            <p class="card-text">Número de grupos: <%= institucion.numeroGrupos %></p>
                            <a href="/psicologo/grupos" class="btn btn-color--secondary w-100">Ver Institución</a>
                            <a href="/psicologo/editar-institucion" class="btn btn-color--third w-100">Editar</a>
                        </div>
                    </div>
                </div>
            <% } %>
            

        </div>

        
       


        
       
    </div>
   
    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>
