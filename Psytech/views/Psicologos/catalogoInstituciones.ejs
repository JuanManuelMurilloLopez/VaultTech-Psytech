<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catalogo instituciones</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/catalogoInstituciones.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>

<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h1 class="text-center">INSTITUCIONES</h1>
            
            <div class="d-flex mb-5">
                <div class="buscar">
                    <div class="barra">
                        <input type="text" id="buscar" name="buscar" placeholder="Buscar">
                        <img src="/images/search.svg" alt="buscar">
                    </div>
                </div>
                
                <a href="/psicologo/registrar-institucion" 
                class="btn registrar-institucion">
                    Registrar Nueva
                </a>
            </div>
    
            <div class="row g-4">
                <% for(institucion of arregloInstituciones) { %>
                    <!-- Tarjetas Institución-->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header">
                                    <h5 class="card-title w-50"><%= institucion.nombreInstitucion %></h5>
                                    <% if(grupo.estatusGrupo == 1){ %>
                                        <span class="card-estatus activo">
                                            <%= "Activa" %> 
                                        </span>
                                    <%} else { %> 
                                        <span class="card-estatus inactivo">
                                            <%= "Inactiva" %>
                                        </span>
                                    <% } %>
                                </div>
                                <p class="card-text">Tipo de Institución: <%= institucion.nombreTipoInstitucion %></p>
                                <p class="card-text">Número de grupos: <%= institucion.numeroGrupos %></p>
                                <div class="card-actions d-flex justify-content-between mt-auto"">
                                    <a class="btn btn-color--secondary " 
                                    href="/psicologo/grupos/<%= institucion.idInstitucion %>">Ver Institución</a>
                                    <a class="btn btn-color--third" href="/psicologo/editar-institucion">Editar</a>
                                </div>
                            </div>

                        </div>

                    </div>
                <% } %>
            </div> <br><br>
    
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

</body>
