<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catalogo instituciones</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/catalogoInstituciones.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>

<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h1 class="text-center">INSTITUCIONES</h1>
            
            <div class="d-flex mb-5">
                <div class="buscar">
                    <div class="barra">
                        <input type="text" id="buscar" name="buscar" placeholder="Buscar">
                        <img src="/images/search.svg" alt="buscar">
                    </div>
                </div>
                
                <a href="/psicologo/registrar-institucion" 
                class="btn btn-color--secondary registrar-institucion">
                    Registrar Nueva
                </a>
            </div>
    
            <div class="row g-4">
                <% for(institucion of arregloInstituciones) { %>
                    <!-- Tarjetas Institución-->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= institucion.nombreInstitucion %></h5>
                                <span class="badge rounded-pill text-bg-info">
                                    <% if(institucion.estatusInstitucion == 1){ %>
                                        <%= "Activo" %> 
                                    <%} else { %> 
                                        <%= "Inactivo" %>
                                    <% } %>
                                </span>
                                <p class="card-text">Tipo de Institución: <%= institucion.nombreTipoInstitucion %></p>
                                <p class="card-text">Número de grupos: <%= institucion.numeroGrupos %></p>
                                <a href="/psicologo/grupos/<%= institucion.idInstitucion %> " class="btn btn-color--secondary w-100">Ver Institución</a>
                                <a href="/psicologo/editar-institucion" class="btn btn-color--third w-100">Editar</a>
                            </div>
                        </div>
                    </div>
                <% } %>
                
    
            </div>
    
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

</body>
