<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de la prueba TERMAN</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/cuadernilloTerman.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h1 class="text-center"> Test de aptitud mental TERMAN </h1>

            <h5 class="titulo-seccion">Información de Test TERMAN</h4>
            <hr>
            <div class="mb-3">

            <% for(serie of preguntasPorSerie) { %>
                <div class="serie">
                    <h3 class="serie-title">Serie <%= serie.idSerieTerman %>: <%= serie.nombreSeccion %> - <%= serie.duracion %> seg</h3><br>
                    <h5><%= serie.instruccion %></>
                    <hr><br>
                    <% for(pregunta of serie.preguntas) { %>
                        <div class="pregunta">
                            <div class="respuesta-titulo">
                                <div class="respuesta-decs">
                                    <h5><%= pregunta.numeroPregunta %> .- 
                                        <%= pregunta.preguntaTerman %>
                                    </h5>
                                </div>
                            </div><br>

                            <% for(opcion of pregunta.opciones) { %>
                                <div class="opcion">
                                    <div class="opcion-check" >
                                        <% if (pregunta.idSerieTerman !== 5 && pregunta.idSerieTerman !== 10) { %>
                                            <% if (opcion.esCorrecta) { %>
                                                <img class="correcta" src="/images/check.svg" alt="opción correcta">
                                            <% } else {%> 
                                                <img class="incorrecta" src="/images/uncheck.svg" alt="respuesta incorrecta">
                                            <% } %> 
                                        <% } %>
                                    </div>
                                    <p><%= opcion.descripcionTerman %></p>
                                </div>
                            <% } %>
                        </div><br>
                    <% } %>
                </div>
            <% } %><br><br><br>

            <div class="fixed-bottom-buttons">
                <div class="container">
                    <div class="row gx-3 mt-4 mb-3">
                        <div class="col-md-6">
                            <a href="/psicologo/catalogo-pruebas" 
                            class="btn btn-color--third">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Incluir el script del navside -->
<script src="/js/_navside.js"></script>
    
</body>
</html>