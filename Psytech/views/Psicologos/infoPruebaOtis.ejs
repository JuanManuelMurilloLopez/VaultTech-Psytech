<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test OTIS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/psicologos/infoPruebaOtis.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS para cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h1 class="text-center"> Test OTIS </h1>
            <hr>
           

            <h5 class="titulo-seccion">Información Test Otis</h5>
            <hr>

            <!-- Preguntas y respuestas -->
            <div class="respuestas-container">
                <% for (const pregunta of preguntas) { %>
                    <div class="pregunta-row mb-4">
                        <div class="pregunta-header">
                            <div class="pregunta-texto <%= pregunta.respuestaCorrecta ? 'correcta' : 'incorrecta' %>">
                                <%= pregunta.numeroPregunta %>.- <%= pregunta.preguntaOtis %> - 
                                <span class="estado-respuesta">
                                    <%= pregunta.respuestaCorrecta ? 'CORRECTA' : 'INCORRECTA' %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="opciones-container">
                            <% for (let i = 0; i < pregunta.opciones.length; i++) { %>
                                <div class="opcion-item">
                                    <div class="opcion-numero"><%= i+1 %>)</div>
                                    <div class="opcion-radio">
                                        <% if (pregunta.opciones[i].esCorrecta) { %>
                                            <div class="radio-checked"></div>
                                        <% } else { %>
                                            <div class="radio-unchecked"></div>
                                        <% } %>
                                    </div>
                                    <div class="opcion-texto"><%= pregunta.opciones[i].descripcionOpcion %></div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>

            <!-- Boton -->
            <div class="boton-container">
                <a class="btn btn-color--third boton-regresar-abajo"
                href="/psicologo/catalogo-pruebas"
                >Regresar</a>
            </div>

        </div>
    </div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Script del navside -->
<script src="/js/_navside.js"></script>
    
</body>
</html>