<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aspirantes por Grupo</title>
    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/aspirantesGrupo.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>

<body class="bg-light">

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">
            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div id="nombres">
                <h1><%= informacionAspirante.nombreUsuario %></h1> <br>
                <h1><%= informacionAspirante.apellidoPaterno %> <%= informacionAspirante.apellidoMaterno %></h1>
            </div>
           
            <br> <br>

            <div>
                <h2>Datos personales</h2>
                <button class="btn btn-danger">Editar</button>
                <br>
                <p>Estatus: </p>
                <button class="btn btn-info" disabled><% if (informacionAspirante.estatusUsuario == 1) { %>
                    Activo
                    <% } else {%>
                    Inactivo
                    <% }%>
                </button>

                <div>
                    <p>Institución de prodecencia : <%= informacionAspirante.insitucionProcedencia %></p>
                    <p>Correo electrónico: <%= informacionAspirante.correo %></p>
                    <p>Número telefónico: +<%= informacionAspirante.lada %> <%= informacionAspirante.numeroTelefono %></p>
                    <p>País de origen: <%= informacionAspirante.nombrePais %></p>
                    <p>Estado de residencia: <%= informacionAspirante.nombreEstado %></p>
                </div>

            </div>

            <div>
                <h2>Documentación</h2>
                <div>
                    <img src="/images/file-icon.png" alt="ícono de documento" width="50">
                    <p>CV</p>
                    <% if (informacionAspirante.cv != null) { %>
                        <button class="btn btn-primary" 
                        onclick= "window.open('/expedientes/<%= informacionAspirante.cv %>', '_blank')""
                        >Ver</button>
                    <% } %>
                </div>
                <div>
                    <img src="/images/file-icon.png" alt="ícono de documento" width="50">
                    <p>Kardex</p>
                    <% if (informacionAspirante.kardex != null) { %>
                        <button class="btn btn-primary" 
                        onclick= "window.open('/expedientes/<%= informacionAspirante.kardex %>', '_blank')""
                        >Ver</button>
                    <% } %>
                </div>
            </div>
            <div>
                <h2>Entrevista Individual</h2>
                <div>
                    <img src="/images/file-icon.png" alt="ícono de documento" width="50">
                    <p>Formato de entrevista</p>
                    <button class="btn btn-primary">Ver</button>
                </div>
            </div>

            <div>
                <h2>Pruebas</h2>
                <div>
                    <% for(prueba of informacionPruebas) { %>
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header">
                                    <h5 class="card-title w-50"><%= prueba.nombre %></h5>
                                </div>
                                <span>
                                    <% if (prueba.nombreEstatus == 'Pendiente') { %>
                                        <button class="btn btn-info" disabled>Pendiente</button>
                                    <% } else if (prueba.nombreEstatus == 'Vencida') {%>
                                        <button class="btn btn-warning" disabled>Vencida</button>
                                    <% } else if (prueba.nombreEstatus == 'Completada') {%>
                                        <button class="btn btn-success" disabled>Completada</button>
                                    <% } %>
                                </span> <br>
                                <% if (prueba.nombreEstatus == 'Completada') { %>
                                    <button class="btn btn-primary">Ver resultados</button>
                                <% } %>
                            </div>          
                        </div>
                    <% } %>
                </div>
            </div>

        <button type="button" class="btn btn-color--third"
        onclick="window.location.href=
        '/psicologo/informacion-grupos/<%= idGrupo %>'"
        >Regresar</button>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>
</body>