<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Importar Aspirantes</title>

    <!-- Bootstrap CSS -->
    <link href=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsidePsicologo.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
    <!-- Link css -->
    <link rel="stylesheet" href="/css/psicologos/importarAspirante.css">
</head>

<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsidePsicologo.ejs') %>

        <div class="container">

            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <h1 class="text-center mt-5">IMPORTAR NUEVO ASPIRANTE</h1>
            
            <p>Instrucciones</p>
    
            <!-- Archivo -->
            <div class="col-md-6 card p-4 mt-4 shadow-sm">
                <div class="card-header">
                    <h5 class="card-title">Excel</h5>
                    <p class="text-muted">Solo archivos .xlsx</p>
                </div>
            
                <div class="card-body text-center">
                    <form id="formaAspirantes" enctype="multipart/form-data" method="POST">
                        <div id="zonaArrastreAspirantes" class="border border-secondary rounded p-4">
                            <h6 class="text-muted">Arrastra para subir</h6>
                            <p class="text-muted">Suelta aquí tu archivo o selecciona uno</p>
                            <div class="text-center my-2">
                                <img src="/images/download_icon.png" alt="" width="50">
                            </div>
                            <input id="excelAspirantes" class="form-control mt-2" type="file" accept=".xlsx" name="excelAspirantes">
                        </div>
                        <br>
                        <br>
                        <button type="submit" class="btn btn-color--secondary">Importar Aspirantes</button>
                    </form>
                </div>
            </div>
            
            <!-- Botones de navegación Grupo, Edicion, Regresar" -->
            <button type="button" class="btn btn-color--third"
            onclick="window.location.href=
            '/psicologo/aspirantes'">Regresar</button>
            <br>
        </div>

    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const zonaArrastrarArchivoCv = document.getElementById("zonaArrastreAspirantes");
            //Cambiar la funcionalidad para poder arrastrar archivos
            zonaArrastrarArchivoCv.addEventListener("dragover", function (event) {
                event.preventDefault();
                zonaArrastrarArchivoCv.classList.add("border-primary");
            });

            zonaArrastrarArchivoCv.addEventListener("dragleave", function () {
                zonaArrastrarArchivoCv.classList.add("border-primary");
            });

            //Cambiar la funcionalidad para que no se abra el archivo
            zonaArrastrarArchivoCv.addEventListener("drop", function (event) {
                event.preventDefault(); 
                const inputArchivoCv = document.getElementById("excelAspirantes");

                if (event.dataTransfer.files.length > 0) {
                    //Asignar el archivo arrastrado al input
                    inputArchivoCv.files = event.dataTransfer.files;
                }

                zonaArrastrarArchivoCv.classList.add("border-primary");
            });
        });
    </script>

    <!-- Bootstrap JS -->
    <script src=
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
</body>