<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PsicoDX | Selecciona tu perfil</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body class="bg-light">

    <!-- Logo -->
    <div class="text-center mt-5">
        <img src="/images/logo.png" alt="PsicoDX" width="400">
    </div>

    <!-- Formulario de inicio de sesión -->
    <form action="/login" method="POST" class="mx-auto mt-4 text-center" style="max-width: 350px;">
        <h3 class="mb-3">Iniciar Sesión</h3>

        <!-- Campo Usuario -->
        <div class="mb-3">
            <label for="usuario" class="form-label">Usuario</label>
            <input type="text" id="usuario" name="usuario" class="form-control" required>
        </div>

        <!-- Campo Contraseña -->
        <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" id="password" name="password" class="form-control" required>
        </div>
    </form>

    <!-- Botones de navegación Aspirante y Psicologo" -->
    <div class="text-center mt-3">
        <div class="d-flex justify-content-center gap-4 mt-3">
            <a onclick="window.location.href='/aspirante/mis-pruebas'" class="btn btn-color btn-lg px-5">Aspirante</a>

            <a onclick="window.location.href='/psicologo/principal'" class="btn btn-color btn-lg px-5">Psicólogo</a>

            <a onclick="window.location.href='/coordinador/psicologos-registrados'" class="btn btn-color btn-lg px-5">Coordinador</a>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
