<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Coordinador</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/coordinadores/registrarCoordinador.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>
    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>      

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">REGISTRAR COORDINADOR</h1>
            </div>
            <form action="/coordinador/registrar-coordinador" method="POST">
                <div>
                    <!--Input nombre-->
                    <div class="mb-3">
                        <label class="form-label" for="nombreCoordinador">Nombre</label>
                        <input class="form-control" type="text" name="nombreCoordinador" id="nombreCoordinador">
                    </div>
                    <!--Input Apellido Paterno-->
                    <div class="mb-3">
                        <label class="form-label" for="apellidoPaterno">Apellido Paterno</label>
                        <input class="form-control" type="text" name="apellidoPaterno" id="apellidoPaterno">
                    </div>
                    <!--Input Apellido Materno-->
                    <div class="mb-3">
                        <label class="form-label" for="apellidoMaterno">Apellido Materno</label>
                        <input class="form-control" type="text" name="apellidoMaterno" id="apellidoMaterno">
                    </div>
                    <!--Input Correo-->
                    <div class="mb-3">
                        <label class="form-label" for="correo">Correo electrónico</label>
                        <input class="form-control" type="text" name="correo" id="correo">
                    </div>
                    <!--Input Número-->
                    <div class="mb-3">
                        <label class="form-label" for="numero">Número de teléfono</label>
                        <input class="form-control" type="text" name="numero" id="numero">
                    </div>
                    
                </div>
                <div>
                    <button type="button" class="btn btn-color--third btn-sm" 
                    onclick="window.location.href='/coordinador/coordinadores-registrados'">Regresar</button>
                    <button type="submit" class="btn btn-color--secondary btn-sm">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>
    
</body>
</html>