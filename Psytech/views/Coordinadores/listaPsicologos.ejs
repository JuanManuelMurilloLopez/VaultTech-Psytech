<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de psicologos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/coordinadores/listaPsicologos.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">PSICÓLOGOS REGISTRADOS</h1>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-2">
                <!-- Barra de búsqueda -->
                <div class="flex-grow-1 position-relative">
                    <input type="text" id="buscar" name="buscar" class="form-control w-100" placeholder="Buscar">
                    <img src="/images/search.svg" alt="buscar" 
                         style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); height: 20px; cursor: pointer;">
                </div>
            
                <!-- Botón Registrar Nuevo -->
                <div>
                    <a href="/coordinador/registrar-psicologo" class="btn btn-color--secondary">
                        Registrar Nuevo
                    </a>
                </div>
            </div>                       
    
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th colspan="4">Nombre</th>
                        <th colspan="4">Apellido</th>
                        <th colspan="4">Correo</th>
                        <th colspan="4">Número</th>
                        <th colspan="4">Estatus</th>
                        <th colspan="4">...</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let psicologo of listaPsicologos) { %>
                        <tr>
                            <td colspan="4"><%= psicologo.nombreUsuario %></td>
                            <td colspan="4"><%= psicologo.apellidoPaterno %> <%= psicologo.apellidoMaterno %></td>
                            <td colspan="4"><%= psicologo.correo %></td>
                            <td colspan="4"><%= psicologo.lada %> <%= psicologo.numeroTelefono %></td>
                            <td colspan="4">
                                <%= psicologo.estatusUsuario === 1 ? "Activo" : "Inactivo" %>
                            </td>
                            <td colspan="4">
                                <button type="button" class="btn btn-color--third btn-sm" 
                                onclick="window.location.href='/coordinador/editar-psicologo/<%= psicologo.idUsuario %>'">Editar</button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
              
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

</body>
</html>