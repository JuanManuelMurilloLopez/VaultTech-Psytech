<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Psicólogo</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/coordinadores/ediatrPsicologo.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">EDITAR INFORMACIÓN DE PSICÓLOGO</h1>
            </div>

            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>
            <form action="/coordinador/editar-psicologo/<%= psicologo.idUsuario %>" method="POST">
                <div>
                    <!--Input nombre-->
                    <div class="mb-3">
                        <label class="form-label" for="nombreUsuario">Nombre</label>
                        <input class="form-control" type="text" name="nombreUsuario" id="nombreUsuario" value="<%= psicologo.nombreUsuario %>" required>
                    </div>
                    <!--Input Apellido Paterno-->
                    <div class="mb-3">
                        <label class="form-label" for="apellidoPaterno">Apellido Paterno</label>
                        <input class="form-control" type="text" name="apellidoPaterno" id="apellidoPaterno" value="<%= psicologo.apellidoPaterno %>" required>
                    </div>
                    <!--Input Apellido Materno-->
                    <div class="mb-3">
                        <label class="form-label" for="apellidoMaterno">Apellido Materno</label>
                        <input class="form-control" type="text" name="apellidoMaterno" id="apellidoMaterno" value="<%= psicologo.apellidoMaterno %>" required>
                    </div>
                    <!--Input Correo-->
                    <div class="mb-3">
                        <label class="form-label" for="correo">Correo electrónico</label>
                        <input class="form-control" type="email" name="correo" id="correo" value="<%= psicologo.correo %>" required>
                    </div>
                    <!-- Input oculto de usuario -->
                    <input type="hidden" name="usuario" id="usuario" value="<%= psicologo.correo %>">  
                    <!--Input Lada-->
                    <div class="mb-3">
                        <label class="form-label" for="lada">Lada</label>
                        <input class="form-control" type="text" name="lada" id="lada" value="<%= psicologo.lada || '+052' %>">
                    </div>
                    <!--Input Número-->
                    <div class="mb-3">
                        <label class="form-label" for="numeroTelefono">Número de teléfono</label>
                        <input class="form-control" type="text" name="numeroTelefono" id="numeroTelefono" value="<%= psicologo.numeroTelefono %>" required>
                    </div>
                </div>
            
                <!-- Estatus del psicólogo -->
                <div class="mb-3">
                    <h4 class="mb-3">Estatus: </h4>
                    <div class="d-flex gap-2 align-items-center">
                        <button type="button" id="estatusActivoBtn" class="me-2 btn <%= psicologo.estatusUsuario ? 'btn-info' : 'btn-outline-info' %>">Activa</button>
                        <button type="button" id="estatusInactivoBtn" class="btn <%= !psicologo.estatusUsuario ? 'btn-danger' : 'btn-outline-danger' %>">Desactivar</button>
                        <input type="hidden" id="estatusUsuario" name="estatusUsuario" value="<%= psicologo.estatusUsuario === 1 ? 'true' : 'false' %>">
                    </div>
                </div>
            
                <!-- Botones de navegación "Regresar y Guardar" -->
                <div class="d-flex justify-content-between mb-4">
                    <a class="btn btn-color--third" href="/coordinador/psicologos-registrados">Regresar</a>
                    <button type="submit" class="btn btn-color--secondary">Guardar</button>
                </div>
            </form>            
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>
    
</body>
</html>