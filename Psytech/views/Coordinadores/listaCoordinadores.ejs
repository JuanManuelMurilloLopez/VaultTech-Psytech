<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de coordinadores</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS global -->
    <link rel="stylesheet" href="/css/coordinadores/listaCoordinadores.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">
        
        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">COORDINADORES REGISTRADOS</h1>
            </div>
            
            <div class="d-flex justify-content-center mt-5 mb-4">
                <!-- Botón Registrar Nuevo -->
                <a href="/coordinador/registrar-coordinador" class="btn btn-color--secondary registrar-coordinador">
                   Registrar Nuevo
                </a>
            </div>      
    
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th colspan="4">Nombre</th>
                        <th colspan="4">Apellidos</th>
                        <th colspan="4">Correo</th>
                        <th colspan="4">Número</th>
                        <th colspan="4">Estatus</th>
                        <th colspan="4"></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let coordinador of listaCoordinadores) { %>
                        <tr>
                            <td colspan="4"><%= coordinador.nombreUsuario %></td>
                            <td colspan="4"><%= coordinador.apellidoPaterno %> <%= coordinador.apellidoMaterno %></td>
                            <td colspan="4"><%= coordinador.correo %></td>
                            <td colspan="4"><%= coordinador.lada %> <%= coordinador.numeroTelefono %></td>
                            <td colspan="4">
                                <%= coordinador.estatusUsuario === 1 ? "Activo" : "Inactivo" %>
                            </td>
                            <td colspan="4">
                                <button type="button" class="btn btn-color--third btn-sm" 
                                onclick="window.location.href='/coordinador/editar-coordinador/<%= coordinador.idUsuario %>'">Editar</button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

</body>
</html>