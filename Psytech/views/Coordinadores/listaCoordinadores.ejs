<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de coordinadores</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS global -->
    <link rel="stylesheet" href="/css/coordinadores/listaCoordinadores.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>

    <div class="main">
        
        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">COORDINADORES REGISTRADOS</h1>
            </div>
            
            <div>
                <!-- Campo Buscar -->
                <div class="mb-3">
                    <label for="buscar" class="form-label">Buscar</label>
                    <input type="text" id="buscar" name="buscar" 
                    class="form-control" required>
                </div>
    
                <!-- Boton Registrar -->
                <div>
                    <button type="button" class="btn btn-color--secondary btn-sm" 
                        onclick="window.location.href='/coordinador/registrar-coordinador'">Registrar nuevo
                    </button>
                </div>
            </div>
    
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th colspan="4">Nombre</th>
                        <th colspan="4">Apellido</th>
                        <th colspan="4">Correo</th>
                        <th colspan="4">Número</th>
                        <th colspan="4">Estatus</th>
                        <th colspan="4">...</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="4">Lusia Fernanda</td>
                        <td colspan="4">Valdez Guillén</td></t>
                        <td colspan="4">ferdivaldez</td>
                        <td colspan="4">4424576724</td>
                        <td colspan="4">Activo</td>
                        <td colspan="4">
                            <button type="button" class="btn btn-color--third btn-sm" 
                            onclick="window.location.href='/coordinador/editar-coordinador'">Editar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

</body>
</html>