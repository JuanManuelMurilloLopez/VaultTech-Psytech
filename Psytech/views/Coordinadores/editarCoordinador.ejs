<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Coordinador</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS link -->
    <link rel="stylesheet" href="/css/coordinadores/editarCoordinador.css">
    <!-- CSS navside -->
    <link rel="stylesheet" href="/css/includeCss/_navsideCoordinador.css">
    <!-- CSS cerrar sesión -->
    <link rel="stylesheet" href="/css/includeCss/_buttonCerrarSesion.css">
</head>
<body>
    <div class="main">

        <!-- Navside -->
        <%- include('../includes/_navsideCoordinador.ejs') %>

        <div class="container">

            <!-- Boton de cerrar sesión -->
            <%- include('../includes/_buttonCerrarSesion.ejs') %>

            <div>
                <h1 class="text-container">EDITAR INFORMACIÓN DE COORDINADOR</h1>
            </div>

            <% if (error && error.length > 0) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>
            <form action="/coordinador/editar-coordinador/<%= idUsuario %>" method="POST">
                <div>
                    <!--Input nombre-->
                    <div class="mb-3">
                        <label class="form-label" for="">Nombre</label>
                        <input class="form-control" type="text" name="" id="">
                    </div>
                    <!--Input Apellido Paterno-->
                    <div class="mb-3">
                        <label class="form-label" for="">Apellido Paterno</label>
                        <input class="form-control" type="text" name="" id="">
                    </div>
                    <!--Input Apellido Materno-->
                    <div class="mb-3">
                        <label class="form-label" for="">Apellido Materno</label>
                        <input class="form-control" type="text" name="" id="">
                    </div>
                    <!--Input Correo-->
                    <div class="mb-3">
                        <label class="form-label" for="">Correo electrónico</label>
                        <input class="form-control" type="text" name="" id="">
                    </div>
                    <!--Input Número-->
                    <div class="mb-3">
                        <label class="form-label" for="">Número de teléfono</label>
                        <input class="form-control" type="text" name="" id="">
                    </div>
                </div>
                <!-- Estatus del coordinador -->
                <div class="mb-3">
                    <h4 class="mb-3">Estatus: </h4>
                    <div class="d-flex gap-2 align-items-center ">
                    <button type="button" id="estatusActivoBtn" class="me-2 btn <%= coordinador.estatusUsuario ? 'btn-info' : 'btn-outline-info' %>">Activa</button>
                    <button type="button" id="estatusInactivoBtn" class="btn <%= !coordinador.estatusUsuario ? 'btn-danger' : 'btn-outline-danger' %>">Desactivar</button>
                    <input type="hidden" id="estatusUsuario" name="estatusUsuario" value="<%= coordinador.estatusUsuario === 1 ? 'true' : 'false' %>">
                    </div>
                </div>
                <!-- Botones de navegación "Regresar y Guardar" -->
                <div class="d-flex justify-content-between mb-4">
                    <a class="btn btn-color--third" 
                    href="/coordinador/coordinadores-registrados"
                    >Regresar</a>
                    <button type="submit" class="btn btn-color--secondary">Guardar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JS de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Incluir el script del navside -->
    <script src="/js/_navside.js"></script>

    <script>
        // Script toggle de estatus
        document.addEventListener('DOMContentLoaded', function() {
            const estatusActivoBtn = document.getElementById('estatusActivoBtn');
            const estatusInactivoBtn = document.getElementById('estatusInactivoBtn');
            const estatusInput = document.getElementById('estatusUsuario');
            
            // Funcion para actualizar el estatus
            function cambiarEstatus(activo) {
                if (activo) {
                    estatusActivoBtn.classList.remove('btn-outline-info');
                    estatusActivoBtn.classList.add('btn-info');
                    estatusInactivoBtn.classList.remove('btn-danger');
                    estatusInactivoBtn.classList.add('btn-outline-danger');
                } else {
                    estatusActivoBtn.classList.remove('btn-info');
                    estatusActivoBtn.classList.add('btn-outline-info');
                    estatusInactivoBtn.classList.remove('btn-outline-danger');
                    estatusInactivoBtn.classList.add('btn-danger');
                }
                estatusInput.value = activo.toString(); // Convertir a string
            }
            
            // Eventos botones de estatus
            estatusActivoBtn.addEventListener('click', function() {
                cambiarEstatus(true);
            });
            
            estatusInactivoBtn.addEventListener('click', function() {
                cambiarEstatus(false);
            });
        });
    </script>
</body>
</html>